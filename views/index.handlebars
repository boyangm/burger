<h1>Eat a Burger!</h1>
<h2>Burgers to be Eaten</h2>
<div id="notDevoured">

<ul >
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<h2>Burgers you've devoured!</h2>

<div id="eaten">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div id="orderBurger">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>